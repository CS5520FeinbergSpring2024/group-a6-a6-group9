<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/senderProfileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="profile" />

    <TextView
        android:id="@+id/senderUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/senderProfileIcon"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="" />

    <ImageView
        android:id="@+id/senderStickerImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toStartOf="@id/senderProfileIcon"
        android:layout_below="@id/senderUsername"
        android:layout_marginEnd="16dp"
        android:contentDescription="sticker" />

</RelativeLayout>
